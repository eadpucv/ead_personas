<section class="modulo">
	<div class="modulo-cuerpo">
		<div class="contenedor-modulo">
			<div class="tab-content margen-sup">
				<form>
					<div class="col-md-12 col-sm-12 col-xs-12">
						<h3 class="fino sans rojo"><i class="icn icn-lapiz nav-icn"></i> Editar tu cuenta</h3>
					</div>
					<div class="col-md-6 col-sm-6 col-xs-12">
						<h5 class="fino sans pizarra">Tus datos personales</h5>
						<hr>
						<div class="margen-inf-sm">
							<label for="username">Nombre de usuario</label>
							<div class="grupo-inputs">
								<div class="input"><i class="icn icn-md icn-usuario"></i></div>
								<input type="text" class="control" id="username" value="<%= (!@user['usuario'].nil?) ? @user['usuario'] : "" %>" />
							</div>
						</div>
						<div class="margen-inf-sm">
							<label for="name">Nombre y apellidos</label>
							<div class="grupo-inputs">
								<div class="input"><i class="icn icn-md icn-perfil"></i></div>
								<input type="text" class="control" id="name" value="<%= (!@user['nombre'].nil?) ? @user['nombre'] : "" %> <%= (!@user['apellido'].nil?) ? @user['apellido'] : "" %>" />
							</div>
						</div>
						<div class="margen-inf-sm">
							<label for="rut">Rut</label>
							<div class="grupo-inputs">
								<div class="input"><i class="icn icn-md icn-acto"></i></div>
								<input type="text" class="control" id="rut" value="<%= (!@user['rut'].nil?) ? @user['rut'] : "" %>" />
							</div>
						</div>
						<div class="margen-inf-sm">
							<label for="usertype">Relación con la e[ad]</label>
							<div class="grupo-inputs">
								<div class="input"><i class="icn icn-md icn-caronabajo "></i></div>
								<select name="user[tipo]">
									<option></option>
									<option value="a" <% if @user['tipo'] === "a" %> selected <% end %>> Alumno(a)</option>
									<option value="p" <% if @user['tipo'] === "p" %> selected <% end %>> Profesor(a)</option>
									<option value="e" <% if @user['tipo'] === "e" %> selected <% end %>> Ex-Alumno(a)</option>
									<option value="f" <% if @user['tipo'] === "f" %> selected <% end %>> Amigo(a)</option>
									<option value="o" <% if @user['tipo'] === "o" %> selected <% end %>> Otro(a)</option>
								</select>
							</div>
						</div>
						<div class="margen-inf-sm">
							<label for="course">Carrera</label>
							<div class="grupo-inputs">
								<div class="input"><i class="icn icn-md icn-caronabajo "></i></div>
								<select name="user[carrera]">
									<option></option>
									<option value="Arquitectura" <% if @user['carrera'] === "Arquitectura" %> selected <% end %>>Arquitectura</option>
									<option value="Diseño Grafico" <% if @user['carrera'] === "Diseño Grafico" %> selected <% end %>>Diseño Gráfico</option>
									<option value="Diseño Industrial" <% if @user['carrera'] === "Diseño Industrial" %> selected <% end %>>Diseño Industrial</option>
									<option value="Nautico y Maritimo" <% if @user['carrera'] === "Nautico y Maritimo" %> selected <% end %>>Naútico y Marítimo</option>
									<option value="Ciudad y Territorio" <% if @user['carrera'] === "Ciudad y Territorio" %> selected <% end %>>Ciudad y Territorio</option>
									<option value="Formacion y Oficio" <% if @user['carrera'] === "Formacion y Oficio" %> selected <% end %>>Formación y Oficio</option>
									<option value="Interaccion" <% if @user['carrera'] === "Interaccion" %> selected <% end %>>Interacción y Servicios</option>
									<option value="Doctorado en AD" <% if @user['carrera'] === "Doctorado en AD" %> selected <% end %>>Doctorado en A&D</option>
								</select>
							</div>
						</div>
						<div class="margen-inf-sm">
							<label for="year">Año ingreso a la e[ad]</label>
							<div class="grupo-inputs">
								<div class="input"><i class="icn icn-md icn-ingresar"></i></div>
								<input type="text" class="control" id="year" value="<%= (!@user['anoingreso'].nil?) ? @user['anoingreso'] : "" %>" />
							</div>
						</div>
						<div class="margen-inf-sm">
							<label for="telephone">Teléfono</label>
							<div class="grupo-inputs">
								<div class="input"><i class="icn icn-md icn-movil"></i></div>
								<input type="tel" class="control" id="telephone" value="<%= (!@user['telefono_cel'].nil?) ? @user['telefono_cel'] : "" %>" />
							</div>
						</div>
						<div class="margen-inf-sm">
							<label for="adress">Dirección</label>
							<div class="grupo-inputs">
								<div class="input"><i class="icn icn-md icn-mapa"></i></div>
								<input type="text" class="control" id="adress" value="<%= (!@user['direccion'].nil?) ? @user['direccion'] : "" %>" />
							</div>
						</div>
					</div>
					<div class="col-md-6 col-sm-6 col-xs-12">
						<h5 class="fino sans pizarra">Contacto y seguridad</h5>
						<hr>
						<div class="margen-inf-sm">
							<label for="lastname">Vinculación con redes sociales</label>
							<div class="bloque">
								<button type="button" class="btn btn-facebook btn-conectado btn-bloque">Conectado con Facebook</button>
								<button type="button" class="btn btn-google btn-conectado btn-bloque">Conectado con Google</button>
							</div>
						</div>
						<div class="margen-inf-sm">
							<label for="email">Correo</label>
							<div class="grupo-inputs">
								<p>juan_perez@hotmail.com</p>
							</div>
						</div>
						<div class="margen-inf-xs">
							<button type="button" class="btn btn-bloque btn-md btn-change-email">Cambiar email</button>
						</div>
						<div class="change-email">
							<div class="margen-inf-sm">
								<label for="email">Ingrese su contraseña</label>
								<div class="grupo-inputs">
									<div class="input"><i class="icn icn-md icn-cerrado"></i></div>
									<input type="email" class="control" id="password"/>
								</div>
							</div>
							<div class="margen-inf-sm">
								<label for="new-email">Nuevo email</label>
								<div class="grupo-inputs">
									<div class="input"><i class="icn icn-md icn-email"></i></div>
									<input type="email" class="control" id="new-email"/>
								</div>
							</div>
							<button type="button" class="btn btn-bloque btn-alerta btn-md btn-dont-change-email">Cancelar</button>
						</div>
						<div class="margen-inf-xs">
							<button type="button" class="btn btn-bloque btn-md btn-change-password">Cambiar contraseña</button>
						</div>
						<div class="change-password">
							<div class="margen-inf-sm">
								<label for="password">Ingrese su contraseña actual</label>
								<div class="grupo-inputs">
									<div class="input"><i class="icn icn-md icn-cerrado"></i></div>
									<input type="password" class="control" id="password"/>
								</div>
							</div>
							<div class="margen-inf-sm">
								<label for="password">Nueva contraseña</label>
								<div class="grupo-inputs">
									<div class="input"><i class="icn icn-md icn-abierto"></i></div>
									<input type="password" class="control" id="password"/>
								</div>
							</div>
							<div class="margen-inf-sm">
								<label for="password_confirm">Confirmar nueva contraseña</label>
								<div class="grupo-inputs">
									<div class="input"><i class="icn icn-md icn-abierto"></i></div>
									<input type="password" class="control" id="password_confirm" />
								</div>
							</div>
							<button type="button" class="btn btn-bloque btn-alerta btn-md btn-dont-change-pass">Cancelar</button>
						</div>
						<div class="margen-inf-sm">
							<div class="g-recaptcha" data-sitekey="6Ld9OBMTAAAAAIawZF7PkJeGGvGAr0VLzCFKoHi0"></div>
						</div>
						<div class="margen-inf-sm">
							<button type="button" class="btn btn-accion btn-lg btn-bloque">Actualizar</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>